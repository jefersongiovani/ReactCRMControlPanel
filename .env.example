# =============================================================================
# CRM Control Panel - Environment Configuration
# =============================================================================
# Copy this file to .env and update the values according to your environment
# =============================================================================

# =============================================================================
# API Configuration
# =============================================================================

# Backend API base URL
# Development: http://localhost:3001/api
# Production: https://your-api-domain.com/api
REACT_APP_API_BASE_URL=http://localhost:3001/api

# API timeout in milliseconds
REACT_APP_API_TIMEOUT=10000

# API retry attempts
REACT_APP_API_RETRY_ATTEMPTS=3

# =============================================================================
# Application Configuration
# =============================================================================

# Application name displayed in the UI
REACT_APP_APP_NAME=CRM Control Panel

# Application version
REACT_APP_VERSION=1.0.0

# Application environment (development, staging, production)
REACT_APP_ENVIRONMENT=development

# Application URL (used for redirects and links)
REACT_APP_APP_URL=http://localhost:3000

# =============================================================================
# Authentication Configuration
# =============================================================================

# JWT token expiration time in minutes
REACT_APP_TOKEN_EXPIRY=60

# Refresh token expiration time in days
REACT_APP_REFRESH_TOKEN_EXPIRY=7

# Enable remember me functionality
REACT_APP_ENABLE_REMEMBER_ME=true

# Session timeout in minutes (0 = no timeout)
REACT_APP_SESSION_TIMEOUT=30

# =============================================================================
# Feature Flags
# =============================================================================

# Enable analytics tracking
REACT_APP_ENABLE_ANALYTICS=false

# Enable error tracking (Sentry, etc.)
REACT_APP_ENABLE_ERROR_TRACKING=false

# Enable performance monitoring
REACT_APP_ENABLE_PERFORMANCE_MONITORING=false

# Enable debug mode (shows additional debug information)
REACT_APP_DEBUG=true

# Enable development tools
REACT_APP_ENABLE_DEV_TOOLS=true

# Enable mock data for development
REACT_APP_ENABLE_MOCK_DATA=false

# Use mock API instead of real backend (for testing)
# Set to true for local testing, false for production
REACT_APP_USE_MOCK_API=true

# =============================================================================
# File Upload Configuration
# =============================================================================

# Maximum file size in bytes (50MB)
REACT_APP_MAX_FILE_SIZE=52428800

# Maximum number of files per upload
REACT_APP_MAX_FILES_PER_UPLOAD=10

# Allowed file types (comma-separated)
REACT_APP_ALLOWED_FILE_TYPES=image/*,.pdf,.doc,.docx,.xls,.xlsx,.csv,.txt

# File upload chunk size in bytes (1MB)
REACT_APP_UPLOAD_CHUNK_SIZE=1048576

# =============================================================================
# UI Configuration
# =============================================================================

# Default theme (light, dark, auto)
REACT_APP_DEFAULT_THEME=light

# Default language (en, es, fr, de)
REACT_APP_DEFAULT_LANGUAGE=en

# Items per page for data tables
REACT_APP_DEFAULT_PAGE_SIZE=10

# Enable animations
REACT_APP_ENABLE_ANIMATIONS=true

# Sidebar collapsed by default on mobile
REACT_APP_SIDEBAR_COLLAPSED_MOBILE=true

# =============================================================================
# Notification Configuration
# =============================================================================

# Default notification duration in milliseconds
REACT_APP_NOTIFICATION_DURATION=6000

# Maximum number of notifications to show
REACT_APP_MAX_NOTIFICATIONS=5

# Enable sound notifications
REACT_APP_ENABLE_SOUND_NOTIFICATIONS=false

# =============================================================================
# Security Configuration
# =============================================================================

# Enable HTTPS redirect
REACT_APP_FORCE_HTTPS=false

# Content Security Policy
REACT_APP_CSP_ENABLED=true

# Enable XSS protection
REACT_APP_XSS_PROTECTION=true

# =============================================================================
# Development Configuration
# =============================================================================

# Enable React DevTools
REACT_APP_ENABLE_REACT_DEVTOOLS=true

# Enable hot module replacement
REACT_APP_ENABLE_HMR=true

# Show performance metrics in console
REACT_APP_SHOW_PERFORMANCE_METRICS=false

# Generate source maps (true, false, inline)
GENERATE_SOURCEMAP=true

# Bundle analyzer (set to true to analyze bundle size)
ANALYZE_BUNDLE=false

# Skip preflight check
SKIP_PREFLIGHT_CHECK=true

# =============================================================================
# Notes
# =============================================================================
#
# 1. All REACT_APP_ prefixed variables are available in the browser
# 2. Never include sensitive information like API keys in these variables
# 3. Use environment-specific .env files (.env.development, .env.production)
# 4. Boolean values should be strings: "true" or "false"
# 5. Restart the development server after changing environment variables
#
# =============================================================================
